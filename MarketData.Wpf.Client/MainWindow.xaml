<Window x:Class="MarketData.Wpf.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketData.Wpf.Client"
        xmlns:views="clr-namespace:MarketData.Wpf.Client.Views"
        xmlns:vm="clr-namespace:MarketData.Wpf.Client.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid Background="#555555" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#444444">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Live Market Data Stream" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="10"
                       Foreground="White"/>

            <Button Grid.Column="1"
                    Content="+ New Tab"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding AddTabCommand}"
                    Margin="10"/>
        </Grid>

        <TabControl Grid.Row="1"
                    ItemsSource="{Binding Tabs}"
                    SelectedItem="{Binding SelectedTab}"
                    Background="#555555"
                    BorderThickness="0"
                    Margin="10">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Header}" 
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                        <Button Content="✕" 
                                Style="{StaticResource CloseButton}"
                                Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                ToolTip="Close tab"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <views:InstrumentView DataContext="{Binding InstrumentViewModel}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
