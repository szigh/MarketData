<Window x:Class="MarketData.Wpf.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketData.Wpf.Client"
        xmlns:vm="clr-namespace:MarketData.Wpf.Client.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid Background="DarkGray" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Live Market Data Stream" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Foreground="White"/>

        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Instrument" 
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Instrument}" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Price" 
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Price}" 
                           FontSize="48" 
                           FontWeight="Bold"
                           Foreground="Green"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Last Update" 
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Timestamp}" 
                           FontSize="18"
                           Foreground="DarkGray"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
