<Window x:Class="MarketData.Wpf.Client.ViewModels.InstrumentSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Instrument" 
        Height="200" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#555555">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Select an instrument to monitor:" 
                   FontSize="14"
                   Foreground="White"
                   Margin="0,0,0,10"/>

        <ComboBox Grid.Row="1"
                  x:Name="InstrumentComboBox"
                  FontSize="16"
                  Padding="5"
                  SelectedIndex="0">
            <ComboBoxItem Content="FTSE"/>
            <ComboBoxItem Content="SNP"/>
            <ComboBoxItem Content="DAX"/>
            <ComboBoxItem Content="NIKKEI"/>
        </ComboBox>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="OK" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Height="30"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
