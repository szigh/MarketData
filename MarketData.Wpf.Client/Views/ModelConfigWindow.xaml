<Window x:Class="MarketData.Wpf.Client.Views.ModelConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:MarketData.Wpf.Client.ViewModels" 
        xmlns:modelVms="clr-namespace:MarketData.Wpf.Client.ViewModels.ModelConfigs"
        xmlns:modelViews="clr-namespace:MarketData.Wpf.Client.Views.ModelConfigs"
        xmlns:shared="clr-namespace:MarketData.Wpf.Shared.Converters;assembly=MarketData.Wpf.Shared"
        d:DataContext="{d:DesignInstance Type=viewmodels:ModelConfigViewModel}"
        mc:Ignorable="d"
        Title="Model Configuration" Height="450" Width="500">
    <Window.Resources>
        <!-- Converters -->
        <shared:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- DataTemplate for RandomMultiplicative -->
        <DataTemplate DataType="{x:Type modelVms:RandomMultiplicativeConfigViewModel}">
            <modelViews:RandomMultiplicativeConfigView/>
        </DataTemplate>

        <!-- DataTemplate for MeanReverting -->
        <DataTemplate DataType="{x:Type modelVms:MeanRevertingConfigViewModel}">
            <modelViews:MeanRevertingConfigView/>
        </DataTemplate>

        <!-- DataTemplate for Flat -->
        <DataTemplate DataType="{x:Type modelVms:FlatConfigViewModel}">
            <modelViews:FlatConfigView/>
        </DataTemplate>

        <!-- DataTemplate for RandomAdditiveWalk -->
        <DataTemplate DataType="{x:Type modelVms:RandomAdditiveWalkConfigViewModel}">
            <modelViews:RandomAdditiveWalkConfigView/>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#555555">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <!-- Header -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Instrument}" 
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="White"
                               Margin="10,10,10,5"/>

                    <ComboBox ItemsSource="{Binding SupportedModels}" 
                              SelectedItem="{Binding ActiveModel}"
                              Margin="10"
                              HorizontalAlignment="Left"
                              Width="150"
                              IsEnabled="{Binding IsSwitchingModel, Converter={StaticResource InverseBoolConverter}}"/>
                </StackPanel>

                <Separator Background="#777777" Margin="0,10"/>

                <!-- Model-specific configuration - DataTemplate automatically selected -->
                <ContentControl Content="{Binding ActiveConfigViewModel}"/>

                <Button Content="Publish Changes"
                        Style="{StaticResource SuccessButton}"
                        Command="{Binding PublishConfigChanges}"
                        Margin="10"
                        HorizontalAlignment="Right"
                        Visibility="{Binding ActiveConfigViewModel.IsModified, 
                    Converter={StaticResource BoolToVisibilityConverter}}"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
