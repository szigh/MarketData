<UserControl x:Class="MarketData.Wpf.Client.Views.InstrumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:fc="clr-namespace:FancyCandles;assembly=FancyCandles"
			 xmlns:fci="clr-namespace:FancyCandles.Indicators;assembly=FancyCandles"
			 xmlns:myFc="clr-namespace:MarketData.Wpf.Client.FancyCandlesImplementations"
			 xmlns:vm="clr-namespace:MarketData.Wpf.Client.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:InstrumentViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#555555">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="White" 
                CornerRadius="10"
                Padding="10"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Price" 
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Price}" 
                           FontSize="48" 
                           FontWeight="Bold"
                           Foreground="Green"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Last Update" 
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Timestamp}" 
                           FontSize="18"
                           Foreground="DarkGray"/>
            </StackPanel>
        </Border>

		<Button Grid.Row="1"
				Margin="10"
				Style="{StaticResource PrimaryButton}"
				Command="{Binding ModelConfigCommand}"
				Content="Model Config"/>

		<fc:CandleChart Grid.Column="1"
						Grid.RowSpan="2"
                        Margin="10"
                        CandlesSource="{Binding Candles}"
                        LegendText="{Binding Instrument}"
                        IsVolumePanelVisible="False"
                        InitialCandleWidth="5">

			<fc:CandleChart.OverlayIndicators>
				<myFc:ObservableOverlayIndicatorCollection>
					<fci:SimpleMovingAverage N="7">
						<fci:SimpleMovingAverage.Pen>
							<Pen Thickness="1" Brush="Magenta" />
						</fci:SimpleMovingAverage.Pen>
					</fci:SimpleMovingAverage>

					<fci:ExponentialMovingAverage Smoothing="0.1">
						<fci:ExponentialMovingAverage.Pen>
							<Pen Thickness="1" Brush="Blue" />
						</fci:ExponentialMovingAverage.Pen>
					</fci:ExponentialMovingAverage>
				</myFc:ObservableOverlayIndicatorCollection>
			</fc:CandleChart.OverlayIndicators>
		</fc:CandleChart>
    </Grid>
</UserControl>
